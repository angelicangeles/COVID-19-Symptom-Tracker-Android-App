<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="15dp"
        android:background="@color/pastel3">
        <ImageView
            android:id="@+id/cvdsymptoms_image"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/fever2"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/cvdsymptoms_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fever"
            android:layout_toRightOf="@+id/cvdsymptoms_image"
            android:layout_marginLeft="10dp"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed-medium"/>
        <TextView
            android:id="@+id/cvdsymptoms_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cvdsymptoms_image"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:text="An abnormally high body temperature, usually accompanied by shivering, headache, and in severe instances, delirium." />




    </RelativeLayout>
</androidx.cardview.widget.CardView>